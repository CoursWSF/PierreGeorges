
<p>{{comment.comment | nl2br}}</p>
<div class="row">
  <div class="col-sm-6">
    <p class="pull-left">
      Author :
      <a href="{{path("byauthor", {idAuthor: quote.user.id})}}">{{comment.user}}</a>
    </p>
  </div>
  <div class="col-sm-6">
    <p class="pull-right"> Date : {{comment.createdAt|date("d/m/Y")}}</p>
  </div>
</div>
<div class="pull-right">
  <div class="row">
    <div class="col-sm-3">
      <a href="{{path("voteupcomment", {id: comment.id})}}"><i class="fa fa-thumbs-o-up"></i></a>
    </div>
    <div class="col-sm-3">
      <p>{{comment.upVote}}</p>
    </div>
    <div class="col-sm-3">
      <a href="{{path("votedowncomment", {id: comment.id})}}"><i class="fa fa-thumbs-o-down"></i></a>
    </div>
    <div class="col-sm-3">
      <p>{{comment.downVote}}</p>
    </div>
  </div>
</div>

<br><br>
<hr>
