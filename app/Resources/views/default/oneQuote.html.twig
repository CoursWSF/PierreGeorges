{% extends 'base.html.twig' %}

{% block body %}

  <div class="container-fluid" style="margin-top:3%;">
    <h2 class="text-center">Une quote </h2><br>
    <div class="row">
      <div class="col-sm-4"></div>

      <div class="col-sm-4">
          {% include 'default/_quote.html.twig' %}
      </div>

      <div class="col-sm-4"></div>
    </div>

    <h3 class="text-center">Commentaires :</h3>

    <div class="row">
      <div class="col-sm-4"></div>

      <div class="col-sm-4">
          {% for comment in comments %}
              {% include 'default/_comment.html.twig' %}
          {% endfor %}
      </div>

      <div class="col-sm-4"></div>
    </div>

    <div class="row">
      <div class="col-sm-4"></div>

      <div class="col-sm-4">

        <h3>Envoyer un commentaire : </h3>

        <form action="{{path('onequote', {id: quote.id} )}}" method="post" novalidate>
          <div class="form-group">
            {{form_row(form.comment, {'attr': {class:"form-control"}})}}
          </div>
          <div class="form-group">
            {{form_row(form.submit, {'attr': {class:"btn btn-primary btn-lg btn-block"}})}}
          </div>
          {{form_rest(form)}}
        </form>
      </div>

      <div class="col-sm-4"></div>
    </div>
  </div>

{% endblock %}
