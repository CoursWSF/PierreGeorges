{% extends 'base.html.twig' %}

{% block body %}

  <div class="container-fluid" style="margin-top:3%;">
    <div class="row">
      <div class="col-sm-4"></div>

      <div class="col-sm-4">

      {% for quote in quotesByAuthor %}
        {% if quote.validate == 1 %}
          {% include 'default/_quote.html.twig' with {quote: quote} %}
        {% endif %}
      {% endfor %}
      </div>

      <div class="col-sm-4"></div>

    </div>
  </div>
{% endblock %}
